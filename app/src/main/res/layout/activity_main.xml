<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add app to use own directory"
        android:id="@+id/buttonAdd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" android:textAllCaps="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete app"
        android:id="@+id/buttonDelete"
        android:layout_alignTop="@+id/buttonAdd"
        android:layout_toEndOf="@+id/buttonAdd" android:textAllCaps="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add rewrite rule"
        android:id="@+id/buttonAddRewrite"
        android:textAllCaps="false"
        android:layout_below="@+id/buttonAddLog"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete rewrite rule"
        android:id="@+id/buttonDeleteRewrite"
        android:textAllCaps="false"
        android:layout_below="@+id/buttonAddLog"
        android:layout_toEndOf="@+id/buttonAddRewrite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add app to enable logging using files"
        android:id="@+id/buttonAddLog"
        android:layout_below="@+id/buttonAdd"
        android:layout_alignParentStart="true" android:textAllCaps="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete app"
        android:id="@+id/buttonDeleteLog"
        android:layout_below="@+id/buttonDelete"
        android:layout_toEndOf="@+id/buttonAddLog" android:textAllCaps="false" />

</RelativeLayout>
